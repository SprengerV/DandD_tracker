<div class='profile-page'>
    <h2 class="userName profileHeader"> {{user.user_name}}</h2>
</div>
<div class='charCamp'>
    <h2 class='profileHeader'><a class='createCharBtn' href='/character-builder'>Create New Character </a></h2>
    <h2 class='profileHeader dash'> / </h2>
    <h2 class='profileHeader'><a class='createCharBtn' href='/campaign-builder'> Create New Campaign</a></h2>
    
</div>

<div class='campaign-display'>
    <div class='campaign-selector'>
        <div class='campaign-list-div'>
            <h2 class='profileHeader'>
                Campaigns
            </h2>
            <div class='campaign-options'>
                {{#each campaigns as |campaign| }}
                <h3 class="campaign-list campaign-option-btn" id="{{campaign.id}}" value="{{campaign.user_id}}">
                    {{campaign.campaign_name}} </h3>
                {{/each}}
            </div>
        </div>
    </div>

    <div class='profile-campaigns'>
        <div class='character-info'>
            <h2 class='profileHeader'>Character
            </h2>
            <div class='character-input'>
            </div>

        </div>
    </div>